#! /bin/zsh

#
# Global settings
#

export BROWSER="firefox"
export EDITOR="vim"
export SUDO_EDITOR="${EDITOR}"
export VISUAL="${EDITOR}"


#
# Set environment variables for programming languages
#

# go
command -v go >/dev/null 2>&1 && {
  export GOPATH="${HOME}/.go"
  export PATH="${PATH}:${GOPATH}/bin"
}

# ruby
command -v ruby >/dev/null 2>&1 && {
  PATH="$(ruby -e 'print Gem.user_dir')/bin:${PATH}"
  GEM_HOME=$(ruby -e 'print Gem.user_dir')
  export PATH
  export GEM_HOME
}

# rust
command -v cargo >/dev/null 2>&1 && {
  export PATH="${PATH}:${HOME}/.cargo/bin"
}

# npm
command -v npm >/dev/null 2>&1 && {
  export PATH="${PATH}:${HOME}/.npm/bin"
  export NPM_CONFIG_PREFIX="${HOME}/.npm"
}

# R
command -v R >/dev/null 2>&1 && {
  R_LIBS_USER="${HOME}/.R/$(R --version | sed -n "s/^R version \([0-9\.]*\) .*/\1/p")"
  export R_LIBS_USER
  alias R='R --no-save '
  if [ -d /usr/share/mathjax ]; then
    export RMARKDOWN_MATHJAX_PATH=/usr/share/mathjax
  fi
}

# custom scripts
export PATH="${PATH}:${HOME}/.scripts"

# local binaries
export PATH="${HOME}/.local/bin:${PATH}"


#
# Set zsh aliases
#

alias vi='vim '
alias sudo='sudo '
alias scp="noglob scp"
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias happymake="make -j$(nproc) && sudo make install"

function superupgrade {
  sudo sh -c 'apt update && apt full-upgrade -y && apt autoremove -y'
}

function megapurge {
  sudo apt autoremove -y && \
    sudo apt autoclean -y && \
    sudo apt clean -y && \
    sudo journalctl --rotate && \
    sudo journalctl --vacuum-time=1s
}

# list directory contents
alias ls='ls --color=auto'
alias sl='ls'
alias lsa='ls -lah'
alias l='ls -lah'
alias ll='ls -lh'
alias la='ls -lAh'


#
# Color terminal output
#

# color ls output based on filetype
eval $(dircolors -b)

# color the man pages
man() {
  env LESS_TERMCAP_mb=$'\E[01;31m' \
  LESS_TERMCAP_md=$'\E[01;38;5;74m' \
  LESS_TERMCAP_me=$'\E[0m' \
  LESS_TERMCAP_se=$'\E[0m' \
  LESS_TERMCAP_so=$'\E[38;5;246m' \
  LESS_TERMCAP_ue=$'\E[0m' \
  LESS_TERMCAP_us=$'\E[04;38;5;146m' \
  man "$@"
}

# colored GCC warnings and errors
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'


#
# Add zsh plugins
#

# antigen
test -f /usr/share/zsh-antigen/antigen.zsh && {
  source /usr/share/zsh-antigen/antigen.zsh

  # custom fishy theme
  antigen bundle sudorook/fishy-lite plugins/git
  antigen bundle sudorook/fishy-lite plugins/battery
  antigen theme sudorook/fishy-lite themes/fishy

  # fish-like syntax highlighting
  antigen bundle zsh-users/zsh-completions
  antigen bundle zsh-users/zsh-syntax-highlighting
  antigen bundle zsh-users/zsh-autosuggestions
  antigen bundle zsh-users/zsh-history-substring-search

  antigen apply
}
